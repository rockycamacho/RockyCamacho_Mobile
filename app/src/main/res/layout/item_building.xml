<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:foreground="?selectableItemBackground"
        android:id="@+id/list_item"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true">

    <TextView
            android:id="@+id/state_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:lines="1"
            android:ellipsize="end"
            tools:text="@sample/state_country"/>

    <TextView
            android:id="@+id/address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/state_city"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:lines="1"
            android:ellipsize="end"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            tools:text="@sample/address"/>

    <ImageView
            android:id="@+id/image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintDimensionRatio="H,16:9"
            app:layout_constraintTop_toBottomOf="@+id/address"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:src="@tools:sample/backgrounds/scenic"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/view_on_map_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:textColor="@color/primary_light_text"
            app:iconTint="@color/primary_light_text"
            app:backgroundTint="#99000000"
            app:rippleColor="#99000000"
            app:strokeColor="@color/colorAccent"
            app:icon="@drawable/ic_location_on_black_24dp"
            app:iconGravity="textStart"
            app:layout_constraintTop_toTopOf="@+id/image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/register_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintVertical_bias="0.95"
            android:textSize="12sp"
            android:text="@string/view_on_map_button"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/register_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:textColor="@color/primary_light_text"
            app:iconTint="@color/primary_light_text"
            app:backgroundTint="#99000000"
            app:rippleColor="#99000000"
            app:strokeColor="@color/colorAccent"
            app:layout_constraintTop_toTopOf="@+id/image"
            app:layout_constraintStart_toEndOf="@+id/view_on_map_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            android:layout_marginEnd="16dp"
            app:layout_constraintVertical_bias="0.95"
            android:textSize="12sp"
            android:text="@string/register_button"/>

